
<div class="container-fluid">
  <section id="events-page">
    <div class="row">
      <div class="col-md-12">
        <h1>Our Events</h1>
        <%=search_form_for (@search) do |f|%>
            <div class="form-group col-md-10 col-sm-10 col-xs-10">


              <%=f.select :genre_cont, options_for_select(['music','dance','random']), include_blank: 'select a genre'%>
            </div>
              <div class="class col-md-2 col-sm-2 col-xs-2 form-group">
                <%= button_tag type: 'submit', class: "btn btn-default", id: "register-button" do %>
                <i class="fas fa-search"></i>
                <% end %>
              </div>

        <%end%>
      </div>
      <div class="col-md-12" style="margin-top: 50px;">
        <div id="masonry-container" class="transitions-enabled ">
          <%@events.each do |event|%>
              <%=render('event', event: event)%>
          <%end%>
        </div>
      </div>

    </div>
  </section>

</div>


