




<div class="card">
        <div class="front test">
          <h1><%=event.title%></h1>
          <h2><%=truncate event.description%></h2>
             <img src="<%='/event_pics/cards/'+event.image%>" alt="<%=event.title.capitalize%>">
        </div>
        <div class="back test">
          <%if event.date !=nil%>
          <p style="padding-top: 10px;">
            Event Date: <%=event.date.strftime('%d/%m/%Y')%>
          </p>
          <%end%>
          <p style=" position: absolute;top: 50%;left: 27%;">
             <a href="/<%=event.id%>">Event Page</a>
          </p>
          <p style="position: absolute; bottom: 0;left:2px;  margin-bottom: 0;">
             Register
          </p>

        </div>
    </div>
